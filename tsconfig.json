{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      // Version that's gonna be used for compilation
      "target": "ESNext",
      "jsx": "react-jsx",
      "allowJs": true,
      "strict": true,
      "moduleResolution": "node",
      // (require() moduel.export) = common js
      // helps us to replace common js by import 
      "esModuleInterop": true,
      // Helps to deal with default imports
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "isolatedModules": true,
      "skipLibCheck": true
    },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
    },
    "include": [
      "./config/**/*.ts",
      "./src/**/*.tsx",
      "./src/**/*.ts",
      "lost-pixel.config.ts"
    ],
    "exclude": [
      "node_modules",
      ".fttemplates/**/*.tsx",
      ".fttemplates/**/*.stories.tsx",
    ]
  }